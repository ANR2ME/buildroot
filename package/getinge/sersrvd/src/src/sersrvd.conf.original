# (1, 2)
StopBits = 1
# (NONE, ODD, EVEN, (MARK, SPACE)?)
Parity = NONE
# (NO, YES)
FlowControlRTS/CTS = NO
# (NO, YES, ROBUST)
FlowControlXON/XOFF = NO

ConnectTo =
ListenerPort = 4003
Timeout = 0
# (NO, YES)
TelnetOptions = YES
AllowedUsers = ""
