#!/bin/sh

. /etc/init.d/functions.sh

start() {
	    begin "Starting ncutild"
	    start_daemon /usr/bin/ncutild
	    end $?
}

stop() {
	    begin "Stopping ncutild"
	    stop_daemon /usr/bin/ncutild
	    end $?
}

restart() {
        stop
        start
}

case "$1" in
  start)
        start
        ;;
  stop)
        stop
        ;;
  restart|reload)
        restart
        ;;
  *)
        echo $"Usage: $0 {start|stop|restart}"
        exit 1
esac

exit $?
