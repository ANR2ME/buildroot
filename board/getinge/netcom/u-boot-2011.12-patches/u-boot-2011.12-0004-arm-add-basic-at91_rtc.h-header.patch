+
+#ifndef AT91_RTC_H
+#define AT91_RTC_H
+
+#ifndef __ASSEMBLY__
+
+typedef struct at91_rtc {
+	u32	cr;	/* Control register */
+	u32	mr;	/* Mode register */
+	u32	timr;	/* Time register */
+	u32	calr;	/* Calendar register */
+	u32     timalr; /* Time alarm register */
+	u32     calalr; /* Calendar alarm register */
+	u32     sr;     /* Status register */
+	u32     sccr;   /* Status clear command register */
+	u32     ier;    /* Interrupt enable register */
+	u32     idr;    /* Interrupt disable register */
+	u32     imr;    /* Interrupt mask register */
+	u32     ver;    /* Valid entry register */
+} at91_rtc_t;
+
+#endif /* __ASSEMBLY__ */
+
+#define AT91_RTC_ACKUPD (1 <<  0) /* Acknowledge for Update */
+#define AT91_RTC_ALARM  (1 <<  1) /* Alarm Flag */
+#define AT91_RTC_SECEV  (1 <<  2) /* Second Event */
+#define AT91_RTC_TIMEV  (1 <<  3) /* Time Event */
+#define AT91_RTC_CALEV  (1 <<  4) /* Calendar Event */
+
+#endif
