 arch/arm/include/asm/arch-at91/at91_rtc.h |   41 +++++++++++++++++++++++++++++
 1 file changed, 41 insertions(+)
 create mode 100644 arch/arm/include/asm/arch-at91/at91_rtc.h

diff --git a/arch/arm/include/asm/arch-at91/at91_rtc.h b/arch/arm/include/asm/arch-at91/at91_rtc.h
new file mode 100644
index 0000000..7efac2e
--- /dev/null
+++ b/arch/arm/include/asm/arch-at91/at91_rtc.h
@@ -0,0 +1,41 @@
